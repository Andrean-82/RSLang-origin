{   "parser": "@typescript-eslint/parser",
    "plugins": ["import", "@typescript-eslint", "prettier"],
    "extends": [
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "@typescript-eslint/no-explicit-any": 2,
        "prettier/prettier": "off",
        "@typescript-eslint/no-unused-vars" : "off" //добавил для того, чтобы не ругался на переменные, которые нигде не вызываются.
    }
}
